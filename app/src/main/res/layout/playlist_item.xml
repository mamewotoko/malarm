<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

  <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >
    <ImageView
        android:id="@+id/play_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_play"
        android:tint="#9E9"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_view"
        android:layout_width="0dp"
        android:layout_weight="11"
        android:layout_height="wrap_content"
        android:lines="2"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:id="@+id/detail_button"
        android:src="@drawable/ic_expand_more_white_24dp"
        android:layout_height="wrap_content"
	android:layout_width="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/tune_detail_desc"
        />
  </LinearLayout>
  <LinearLayout android:id="@+id/playlist_detail_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="4dp"
                android:visibility="gone">
    <ImageButton
        android:id="@+id/move_down"
	android:layout_width="0dp"
	android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_downward_white_24dp"
        android:contentDescription="@string/tune_move_down"
        />
    <ImageButton
        android:id="@+id/move_up"
	android:layout_width="0dp"
	android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_upward_white_24dp"
        android:contentDescription="@string/tune_move_up"
        />
    <ImageButton
        android:id="@+id/delete"
	android:layout_width="0dp"
	android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_white_24dp"
        android:contentDescription="@string/tune_delete"
        />
    
  </LinearLayout>
</LinearLayout>
