<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">
        <!--
            app:popupTheme="@style/AppTheme.PopupOverlay">
            -->
      <LinearLayout
          android:layout_width="80dp"
          android:layout_height="0dp"
          >
        <TextView
            android:id="@+id/message"
            android:text="@string/app_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
          <TextView
              android:id="@+id/target_time_label"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall" />
          <TextView
              android:id="@+id/sleep_time_label"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>
      </LinearLayout>
      <android.support.v7.widget.SwitchCompat
          android:textOff="@string/set_alarm"
          android:textOn="@string/stop_alarm"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/alarm_button" />

      </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="174dp"
        android:paddingBottom="0dp" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="152dp"
            android:layout_marginRight="2dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TimePicker
                android:id="@+id/timePicker1"
                android:layout_width="152dp"
                android:timePickerMode="spinner"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right" >

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:orientation="horizontal"
                 >

                <ProgressBar
                    android:id="@+id/loading_icon"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="38dp"
                    android:layout_height="fill_parent"
		    android:visibility="invisible"
                    android:gravity="right"
                     />
            </LinearLayout>

            <!--
            <ToggleButton
                android:id="@+id/alarm_button"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textOff="@string/set_alarm"
                android:textOn="@string/stop_alarm" />
                -->
            <LinearLayout
                android:id="@+id/linearLayout_contbutton"
                android:layout_width="fill_parent"
                android:layout_height="46dp" >

                <Button
                    android:id="@+id/set_now_button"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="50"
                    android:paddingLeft="0dp"
                    android:text="@string/set_now_short" />

                <ImageButton
                    android:id="@+id/set_by_voice"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="25"
                    android:contentDescription="@string/voice_button_desc"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:tint="#fff" />

                <ImageButton
                    android:id="@+id/next_button"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="25"
                    android:contentDescription="@string/next_button_desc"
                    android:src="@android:drawable/ic_media_next"
                    android:tint="#fff" />
            </LinearLayout>
        </LinearLayout>
      </LinearLayout>
    <!-- 
    <TextView
        android:id="@+id/playlist_name_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />
 -->
    <WebView
        android:id="@+id/webView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusable="true"
        android:focusableInTouchMode="true" >
    </WebView>
</LinearLayout>
